 <link rel="stylesheet" href="/css/home.css">

<div id="main-container">
  <section id="feed-posts">
    <% if(locals.user) { %>
       <div id="home-log-in">
      <h3>Hello <%= locals.user.name %> :) Post something cool! Now </h3>
      <form action="/posts/create" id="new-post-form" method="POST">
        <textarea name="content" cols="30" rows="3" required></textarea>
        <input type="submit" value="Post">
      </form>

      <h4>Daily Posts</h4>
      <div id="post-list-container">
        <ul>
          <% for(post of posts){%>
            <%- include('_post') -%>
          <% }%>
        </ul>
      </div>
    </div>
    <% } else { %>
     
        <h1>Hello!! sign-in or sign-up to continue</h1>
      
    <% } %>
  </section>

  <aside id="user-friends">
    <% if(locals.user) { %>
      <h4>Users</h4>
      <% for(u of all_users) { %>
        <p>
          <a href="/users/profile/<%= u._id %>"><%= u.name %></a>
        </p>
      <% } %>
    <% } else { %>
      <div id="color-fill"></div>
      <% } %>
  </aside>
</div>

<%- include('_chat_box') -%>

<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.6.2/socket.io.js"></script>
<script src="/js/chat_engine.js"></script>

<% if(locals.user){ %>
<script>
  new ChatEngine('user-chat-box', '<%= locals.user.email %>');
</script>
<% } %>




